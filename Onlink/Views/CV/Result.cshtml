@model Onlink.Models.CVComparisonResult
@{
    ViewData["Title"] = "Comparison Result";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <style>
        :root {
            --primary-color: #047123;
            --primary-hover: #035a1c;
            --glass-blur: 12px;
            --glass-opacity: 0.25;
        }

        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            font-family: 'Raleway', sans-serif;
            margin: 0;
            padding: 0;
        }

        .glass-container {
            background: rgba(255, 255, 255, var(--glass-opacity));
            backdrop-filter: blur(var(--glass-blur));
            -webkit-backdrop-filter: blur(var(--glass-blur));
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.18);
            box-shadow: 0 8px 32px rgba(31, 38, 135, 0.15);
            padding: 2.5rem;
            transition: all 0.3s ease;
        }

        .glass-container:hover {
            box-shadow: 0 8px 32px rgba(31, 38, 135, 0.25);
        }

        .btn-outline-secondary {
            border-radius: 12px;
            font-weight: 600;
            border: 2px solid #ced4da;
            color: #495057;
            background-color: transparent;
            transition: all 0.3s ease;
        }

        .btn-outline-secondary:hover {
            background-color: #f1f3f5;
            color: #047123;
            border-color: #047123;
        }

        h2 span {
            color: var(--primary-color);
            font-weight: 700;
        }

        .score {
            font-size: 1.25rem;
            font-weight: bold;
        }

        .page-transition {
            animation: fadeIn 0.5s ease forwards;
        }

        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @@media (max-width: 768px) {
            .glass-container {
                padding: 1.5rem;
            }
        }
    </style>


<div class="container py-5 page-transition">
    <div class="glass-container mx-auto" style="max-width: 600px;">
        <h2 class="mb-4 text-center"><span>Comparison</span> Result</h2>

        <p><strong>📄 File:</strong> @Model.FileName</p>
        <p><strong>💼 Matched Job:</strong> @Model.MatchedJobTitle</p>
        <p class="score">
            <strong>📊 Similarity Score:</strong>
            <span style="color:@(Model.SimilarityScore >= 70 ? "#047123" : "#dc3545");">
                @Model.SimilarityScore %
            </span>
        </p>

        <div class="text-center mt-4">
            <a asp-action="Upload" class="btn btn-outline-secondary">🔁 Compare Another CV</a>
        </div>
    </div>
</div>
