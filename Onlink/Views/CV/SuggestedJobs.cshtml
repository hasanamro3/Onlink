@model List<(Onlink.Models.Job job, double score)>
@{
    ViewData["Title"] = "Suggested Jobs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Onlink</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@300;400;600;700&display=swap" rel="stylesheet" />

    <style>
        :root {
            --primary-color: #047123;
            --primary-dark: #035a1c;
            --glass-blur: 12px;
            --glass-opacity: 0.22;
        }

        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            font-family: 'Raleway', sans-serif;
            padding: 2rem;
        }

        .glass-container {
            background: rgba(255, 255, 255, var(--glass-opacity));
            backdrop-filter: blur(var(--glass-blur));
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 8px 24px rgba(31, 38, 135, 0.15);
            padding: 2rem;
            transition: transform 0.2s ease;
        }

        .glass-container:hover {
            transform: translateY(-4px);
        }

        .section-title {
            text-align: center;
            font-weight: 700;
            margin-bottom: 2rem;
            border-bottom: 3px solid var(--primary-color);
            display: inline-block;
        }

        .match-score {
            font-weight: 600;
            color: var(--primary-color);
        }

        .job-title {
            font-size: 1.3rem;
            font-weight: 700;
            color: #2c3e50;
        }

        .job-description {
            font-size: 1rem;
            color: #555;
        }

        .btn-primary {
            background: var(--primary-color);
            border: none;
        }

        .btn-primary:hover {
            background: var(--primary-dark);
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="section-title">Jobs Suggested For You</h2>

        @if (!Model.Any())
        {
            <p class="text-muted text-center">No strong matches found. Try improving your resume or uploading one.</p>
        }

        @foreach (var item in Model)
        {
            <div class="glass-container mb-4">
                <div class="job-title">@item.job.JobName</div>
                <p class="match-score">Match Score: @item.score%</p>
                <p class="job-description">@item.job.JobDescription</p>
                <a asp-controller="Dashboards" asp-action="ApplyJob" asp-route-id="@item.job.JobId" class="btn btn-primary btn-sm mt-2">
                    <i class="fas fa-paper-plane"></i> Apply Now
                </a>
            </div>
        }
    </div>
</body>
</html>
