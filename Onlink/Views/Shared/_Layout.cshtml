@{
    var isAuthenticated = User.Identity?.IsAuthenticated == true && User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier) != null;
    var userType = User.FindFirst("UserType")?.Value;
    var mainMargin = isAuthenticated ? "260px" : "0";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Onlink</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" />
    <style>
        :root {
            --primary-color: #047123;
            --primary-hover: #035a1c;
            --glass-blur: 10px;
            --glass-opacity: 0.18;
        }

        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            font-family: 'Raleway', sans-serif;
            padding-top: 70px;
            margin: 0;
        }

        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            width: 260px;
            background: rgba(255, 255, 255, 0.12);
            backdrop-filter: blur(var(--glass-blur));
            border-right: 1px solid rgba(0, 0, 0, 0.1);
            padding: 2rem 1.5rem;
            box-shadow: 4px 0 20px rgba(0, 0, 0, 0.08);
            z-index: 1000;
        }

        .sidebar h5 {
            color: var(--primary-color);
            font-weight: bold;
            margin-bottom: 1.5rem;
        }

        .sidebar a,
        .sidebar button {
            display: block;
            color: var(--primary-color);
            font-weight: 600;
            margin-bottom: 1rem;
            text-decoration: none;
            background: none;
            border: none;
            width: 100%;
            text-align: left;
            padding: 0.5rem 0;
            transition: all 0.2s ease;
        }

        .sidebar a:hover,
        .sidebar button:hover {
            color: var(--primary-hover);
            background: rgba(4, 113, 35, 0.1);
            border-radius: 8px;
            padding-left: 0.5rem;
        }

        .logout-btn {
            color: #dc3545 !important;
        }

        .logout-btn i {
            color: #dc3545 !important;
        }

        main {
            margin-left: @mainMargin;
            padding: 2rem;
            transition: margin 0.3s ease;
        }

        .top-bar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 70px;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(12px);
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 2rem;
            z-index: 1001;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
            margin: 0;
        }

        .top-bar .brand {
            font-weight: bold;
            font-size: 1.2rem;
            color: var(--primary-color);
        }

        .top-bar .auth-links a {
            margin-left: 1rem;
            color: var(--primary-color);
            font-weight: 600;
            text-decoration: none;
        }

        .top-bar .auth-links a:hover {
            color: var(--primary-hover);
        }
    </style>
</head>
<body>
    <div class="top-bar">
        <div class="brand"><i class="bi bi-briefcase-fill me-2"></i> Onlink</div>
        @if (!isAuthenticated)
        {
            <div class="auth-links">
                <a asp-controller="Accounts" asp-action="Login"><i class="bi bi-box-arrow-in-right me-1"></i> Login</a>
                <a asp-controller="Accounts" asp-action="Register"><i class="bi bi-person-plus me-1"></i> Register</a>
            </div>
        }
    </div>

    @if (isAuthenticated)
    {
        <div class="sidebar">
            
            <ul class="sidebar-nav" style="margin-top:70px">
                <li>
                    <a asp-controller="Accounts" asp-action="Profile">
                        <i class="bi bi-person"></i> Profile
                    </a>
                </li>
                <li>
                    <a asp-controller="Dashboards" asp-action="CreatePost">
                        <i class="bi bi-plus-circle"></i> Create Post
                    </a>
                </li>
                
                <li>
                    <a asp-controller="Dashboards" asp-action="Posts">
                        <i class="bi bi-list-ul"></i> View Posts
                    </a>
                </li>
                @if (userType == "Employer")
                {
                    <li>
                        <a asp-controller="Dashboards" asp-action="CreateJob">
                            <i class="bi bi-briefcase"></i> Create Job
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Dashboards" asp-action="MyJobs">
                            <i class="bi bi-briefcase"></i> My Jobs
                        </a>
                    </li>
                }

                @if (userType == "Employee"){
                    <a asp-controller="CV" asp-action="SuggestedJobs" class="nav-link">
                        <i class="fas fa-star"></i> Suggested Jobs
                    </a>
                }
                <li>
                    <a asp-controller="Dashboards" asp-action="Jobs">
                        <i class="bi bi-collection"></i> View Jobs
                    </a>
                </li>
                <li class="mt-3">
                        <a asp-controller="Accounts" asp-action="Logout" class="btn logout-btn">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                </li>
            </ul>
        </div>
    }

    <main>
        @RenderBody()
    </main>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
