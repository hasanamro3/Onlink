@model Onlink.Models.Post
@{
    ViewData["Title"] = "Create Post";
    Layout = "_Layout";
}
<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Onlink</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@300;400;600;700&display=swap" rel="stylesheet" />
    <style>
        :root {
            --primary-color: #047123;
            --primary-dark: #035a1c;
            --glass-blur: 12px;
            --glass-opacity: 0.25;
        }

        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Raleway', sans-serif;
            margin: 0;
            padding: 20px;
        }

        .glass-container {
            background: rgba(255, 255, 255, var(--glass-opacity));
            backdrop-filter: blur(var(--glass-blur));
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.18);
            box-shadow: 0 8px 32px rgba(31, 38, 135, 0.15);
            padding: 2.5rem;
            max-width: 700px;
            width: 100%;
        }

        .form-control {
            background: rgba(255, 255, 255, 0.7);
            border: 1px solid rgba(255, 255, 255, 0.3);
            border-radius: 12px;
            padding: 12px 15px;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: var(--primary-color);
                box-shadow: 0 0 0 0.25rem rgba(4, 113, 35, 0.15);
                background: rgba(255, 255, 255, 0.9);
            }

        .btn-glass {
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(12px);
            border: 1px solid rgba(4, 113, 35, 0.4);
            border-radius: 12px;
            padding: 0.8rem 1.8rem;
            color: var(--primary-color);
            font-weight: 600;
            text-transform: uppercase;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
            width: 100%;
        }

            .btn-glass:hover {
                background: rgba(255, 255, 255, 0.8);
                color: var(--primary-dark);
                transform: translateY(-2px);
                box-shadow: 0 6px 20px rgba(4, 113, 35, 0.15);
            }

        .text-danger {
            color: #ef4444;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .page-transition {
            animation: fadeIn 0.5s ease;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body class="page-transition">
    <div class="glass-container">
        <h2 class="text-center mb-4">
            <span style="border-bottom: 3px solid var(--primary-color); padding-bottom: 0.25rem;">Create New Post</span>
        </h2>

        <form asp-action="CreatePost" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label">Activity Type</label>
                <select asp-for="ActivityType" class="form-control" asp-items="Html.GetEnumSelectList<ActivityType>()">
                    <option value="">-- Select Activity --</option>
                </select>
                <span asp-validation-for="ActivityType" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Upload Media (optional)</label>
                <input type="file" name="MediaFile" class="form-control" accept="image/*,video/*" />
            </div>

            <div class="mb-3">
                <label class="form-label">Privacy</label>
                <select asp-for="Privacy" class="form-control" asp-items="Html.GetEnumSelectList<PostPrivacy>()">
                    <option value="">-- Select Privacy --</option>
                </select>
                <span asp-validation-for="Privacy" class="text-danger"></span>
            </div>

            <div class="d-grid mt-4">
                <button type="submit" class="btn-glass">
                    <i class="fas fa-upload"></i> Submit Post
                </button>
            </div>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
