@model IEnumerable<Onlink.Models.Job>
@using Onlink.Models
@{
    ViewData["Title"] = "Jobs";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Onlink</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@300;400;600;700&display=swap" rel="stylesheet" />
</head>
<body class="page-transition">
    <br />

    <div class="container">
        <h2 class="text-center mb-4">
            <span style="border-bottom: 3px solid var(--primary-color); padding-bottom: 0.25rem;">Available Jobs</span>
        </h2>

        <!-- Sort Button with Toggle -->
        <div class="d-flex justify-content-end mb-3 gap-2">
            @{
                string currentSort = ViewBag.Sort as string ?? "";
                string nextSort = currentSort == "salary_desc" ? "salary_asc" : "salary_desc";
                string sortLabel = currentSort == "salary_desc" ? "Sort by Salary (Low to High)" : "Sort by Salary (High to Low)";
                string sortIcon = currentSort == "salary_desc" ? "fa-sort-amount-up" : "fa-sort-amount-down-alt";
            }

            <form method="get" asp-action="Jobs" asp-controller="Dashboards">
                <input type="hidden" name="sort" value="@nextSort" />
                <button type="submit" class="btn btn-outline-success">
                    <i class="fas @sortIcon me-1"></i> @sortLabel
                </button>
            </form>

            @if (!string.IsNullOrEmpty(currentSort))
            {
                <a class="btn btn-outline-secondary" asp-action="Jobs" asp-controller="Dashboards">
                    <i class="fas fa-times me-1"></i> Clear Sort
                </a>
            }
        </div>

        <!-- Jobs List -->
        @foreach (var job in Model)
        {
            <div class="glass-container">
                <div class="post-header">
                    <i class="fas fa-briefcase me-2"></i> @job.JobName
                </div>
                <div class="post-meta">
                    <i class="fas fa-building"></i> @job.Employer?.Name •
                    <i class="fas fa-calendar-day"></i> Due: @job.SubmitSessionDueDate.ToShortDateString()
                </div>
                <p class="mt-3">
                    <strong>Description:</strong> @job.JobDescription
                </p>
                <p>
                    <strong>Salary:</strong> $@job.JobSalary
                </p>

                @if (ViewBag.UserType == "Employee")
                {
                    <form method="post" asp-action="ApplyJob" asp-controller="Dashboards" class="mt-3">
                        <input type="hidden" name="jobId" value="@job.JobId" />
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-paper-plane me-1"></i> Apply Now
                        </button>
                    </form>
                }
            </div>
        }


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<style>
    :root {
        --primary-color: #047123;
        --primary-dark: #035a1c;
        --glass-blur: 12px;
        --glass-opacity: 0.25;
    }

    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        min-height: 100vh;
        font-family: 'Raleway', sans-serif;
        margin: 0;
        padding: 2rem;
    }

    .glass-container {
        background: rgba(255, 255, 255, var(--glass-opacity));
        backdrop-filter: blur(var(--glass-blur));
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.18);
        box-shadow: 0 8px 32px rgba(31, 38, 135, 0.15);
        padding: 2rem;
        margin-bottom: 2rem;
    }

    .post-header {
        font-size: 1.3rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        color: var(--primary-color);
    }

    .post-meta {
        font-size: 0.9rem;
        color: #666;
    }

    .page-transition {
        animation: fadeIn 0.5s ease;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .btn-outline-success {
        border-color: var(--primary-color);
        color: var(--primary-color);
    }

        .btn-outline-success:hover {
            background-color: var(--primary-color);
            color: #fff;
        }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: #fff;
    }
</style>
