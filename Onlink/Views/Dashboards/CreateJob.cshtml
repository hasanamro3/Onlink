@model Onlink.Models.Job
@{
    ViewData["Title"] = "Create Job";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="glass-container">
                <h2 class="text-center mb-4">
                    <span style="border-bottom: 3px solid var(--primary-color); padding-bottom: 0.25rem;">Create New Job</span>
                </h2>

                <form asp-controller="Dashboards" asp-action="CreateJob" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="JobName" class="form-label">Job Title</label>
                        <input asp-for="JobName" class="form-control" />
                        <span asp-validation-for="JobName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="JobDescription" class="form-label">Description</label>
                        <textarea asp-for="JobDescription" class="form-control"></textarea>
                        <span asp-validation-for="JobDescription" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="JobSalary" class="form-label">Salary</label>
                        <input asp-for="JobSalary" class="form-control" />
                        <span asp-validation-for="JobSalary" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SubmitSessionDueDate" class="form-label">Application Deadline</label>
                        <input asp-for="SubmitSessionDueDate" class="form-control" type="date" />
                        <span asp-validation-for="SubmitSessionDueDate" class="text-danger"></span>
                    </div>

                    <div class="d-grid mt-4">
                        <button type="submit" class="btn-glass">
                            <i class="fas fa-briefcase"></i> Post Job
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function () {
            $("form").submit(function () {
                $("button[type='submit']").prop("disabled", true);
            });
        });
    </script>
}

<style>
    :root {
        --primary-color: #047123;
        --primary-dark: #035a1c;
        --glass-blur: 12px;
        --glass-opacity: 0.25;
    }

    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        font-family: 'Raleway', sans-serif;
        margin: 0;
        padding-top: 100px;
        min-height: 100vh;
    }

    .glass-container {
        background: rgba(255, 255, 255, var(--glass-opacity));
        backdrop-filter: blur(var(--glass-blur));
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.18);
        box-shadow: 0 8px 32px rgba(31, 38, 135, 0.1);
        padding: 3rem 2.5rem;
        width: 100%;
        max-width: 550px;
        margin: 0 auto;
    }

    .form-control, select, textarea {
        background: rgba(255, 255, 255, 0.7);
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 12px;
        padding: 12px 15px;
        transition: all 0.3s ease;
    }

        .form-control:focus, select:focus, textarea:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.25rem rgba(4, 113, 35, 0.15);
            background: rgba(255, 255, 255, 0.9);
        }

    .btn-glass {
        background: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(12px);
        border: 1px solid rgba(4, 113, 35, 0.4);
        border-radius: 12px;
        padding: 0.8rem 1.8rem;
        color: var(--primary-color);
        font-weight: 600;
        text-transform: uppercase;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        width: 100%;
    }

        .btn-glass:hover {
            background: rgba(255, 255, 255, 0.8);
            color: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(4, 113, 35, 0.15);
        }

    .text-danger {
        color: #ef4444;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }
</style>
