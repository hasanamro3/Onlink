@model IEnumerable<Onlink.Models.EmployeeJob>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobApplication)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobApplication.JobApplicationId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmployeeJobId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EmployeeJobId">Details</a> |
